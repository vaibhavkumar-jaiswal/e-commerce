{
  "db_connection": {
    "host": "localhost",
    "db_name": "golang_gorm_db",
    "ssl_mode": "disable"
  },
  "server": {
    "address": "localhost",
    "port": "8080"
  },
  "redis_connection": {
    "address": "localhost:6379",
    "db": 0
  },
  "logger": {
    "request": {
      "logdir": "logs/",
      "filename_prefix": ""
    },
    "system": {
      "logdir": "logs/",
      "filename_prefix": ""
    }
  },
  "smtp_server": {
    "host": "smtp.gmail.com",
    "port": 587
  },
  "rate_limit": {
    "max_requests": 5,
    "duration_in_minute": 1
  },
  "session_timeout_min": 20,
  "password_length": 8,
  "otp_length": 6,
  "otp_exp_min":10,
  "allowed_origins": ["http://localhost:3000", "http://127.0.0.1:3000"],
  "allowed_methods": ["GET", "POST", "PUT", "DELETE"]
}
